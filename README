# mvala (edited from web page)

# cmake example from $ALICE_ROOT
cd <AliRsnLite-path>
mkdir build
cd build
cmake -DALIRSNLITE_SYNC=YES ../

# cmake example from $ALICE_ROOT with external libs (PWG2resonances and EventMixing)
cd <AliRsnLite-path>
mkdir build
cd build
cmake -DALIRSNLITE_SYNC=YES -DPWG2resonances="/home/mvala/projects/PWG2resonances" -DEventMixing="/home/mvala/projects/EventMixing/" ../

# NEW cmake instruction
export USER_CMAKE_EXTRA_OPTIONS="-DPWGLFresonances=/home/mvala/git/AliRsn"
mkdir build
cd build
<AliRsnLite-path>/scripts/alirsnlite-make.sh -j3


